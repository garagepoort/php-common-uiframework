{
  "root":true,

  "env": {
    "browser":true,
    "jasmine":true,
    "jquery":true
  },

  "globals": {
    "angular":true,
    "inject":true,
    "module":true,
    "moment":true,
    "_":true
  },

  "extends": ["eslint:recommended"],

  "rules": {
    "dot-notation":2,
    "eqeqeq":2,
    "no-console":2,
    "no-else-return":2,
    "no-fallthrough":2,
    "no-loop-func":2,
    "no-mixed-spaces-and-tabs":0,
    "no-return-assign":2,
    "no-self-compare":2,
    "no-shadow":2,
    "no-undef-init":2,
    "no-unused-expressions":2,
    "semi":[2,"always"],

    "complexity":[1,4],
    "max-depth":[1,3]
  }
}
